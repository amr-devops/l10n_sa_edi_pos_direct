<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- POS Order Form View with ZATCA Fields -->
        <record id="view_pos_order_form_zatca" model="ir.ui.view">
            <field name="name">pos.order.form.zatca</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='other_information']" position="after">
                    <group string="ZATCA Information" 
                           invisible="uuid == False">
                        <field name="uuid" readonly="1"/>
                        <field name="l10n_sa_zatca_status" readonly="1"/>
                        <field name="l10n_sa_zatca_error_message" 
                               invisible="l10n_sa_zatca_status != 'error'"
                               readonly="1"/>
                        <field name="l10n_sa_zatca_submission_time" readonly="1"/>
                        <field name="l10n_sa_qr_code_image" 
                               string="QR Code (Scannable)"
                               widget="html" 
                               readonly="1"/>
                    </group>
                </xpath>
                
                <xpath expr="//header" position="inside">
                    <button name="action_manual_retry_zatca" 
                            string="Retry ZATCA" 
                            type="object"
                            class="btn-secondary"
                            invisible="l10n_sa_zatca_status not in ['error', 'queued']"/>
                </xpath>
            </field>
        </record>

        <!-- POS Order Tree View with ZATCA Status -->
        <record id="view_pos_order_tree_zatca" model="ir.ui.view">
            <field name="name">pos.order.tree.zatca</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="l10n_sa_zatca_status" optional="show" 
                           decoration-success="l10n_sa_zatca_status == 'submitted'"
                           decoration-warning="l10n_sa_zatca_status in ['pending', 'queued']"
                           decoration-danger="l10n_sa_zatca_status == 'error'"/>
                </xpath>
                

            </field>
        </record>

        <!-- Search View for ZATCA Orders -->
        <record id="view_pos_order_search_zatca" model="ir.ui.view">
            <field name="name">pos.order.search.zatca</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="ZATCA Pending" name="zatca_pending" 
                            domain="[('l10n_sa_zatca_status', '=', 'pending')]"/>
                    <filter string="ZATCA Error" name="zatca_error" 
                            domain="[('l10n_sa_zatca_status', '=', 'error')]"/>
                    <filter string="ZATCA Submitted" name="zatca_submitted" 
                            domain="[('l10n_sa_zatca_status', '=', 'submitted')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="ZATCA Status" name="group_zatca_status" 
                                context="{'group_by': 'l10n_sa_zatca_status'}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Action for ZATCA Orders -->
        <record id="action_pos_order_zatca" model="ir.actions.act_window">
            <field name="name">ZATCA Orders</field>
            <field name="res_model">pos.order</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('uuid', '!=', False)]</field>
            <field name="context">{'search_default_zatca_pending': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No ZATCA orders found!
                </p>
                <p>
                    Orders with ZATCA processing will appear here.
                </p>
            </field>
        </record>

        <!-- Menu Item for ZATCA Orders -->
        <menuitem id="menu_pos_order_zatca"
                  name="ZATCA Orders"
                  parent="point_of_sale.menu_point_of_sale"
                  action="action_pos_order_zatca"
                  sequence="15"/>

        <!-- Server Action for ZATCA Sync -->
        <record id="action_zatca_sync_all_pending" model="ir.actions.server">
            <field name="name">ðŸ”„ Sync All Pending ZATCA Orders</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
action = model.action_sync_all_pending_zatca()
            </field>
        </record>

    </data>
</odoo>
