<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Cron Job for Processing Pending ZATCA Orders -->
        <record id="ir_cron_zatca_process_pending_orders" model="ir.cron">
            <field name="name">ZATCA: Process Pending POS Orders</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="state">code</field>
            <field name="code">model.batch_submit_pending_zatca()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron Job for Retrying Failed ZATCA Submissions -->
        <record id="ir_cron_zatca_retry_failed" model="ir.cron">
            <field name="name">ZATCA: Retry Failed Submissions</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_retry_failed_zatca()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
